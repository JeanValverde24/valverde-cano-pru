@{
    ViewBag.Title = "Agregar Plato - Restaurante";
    var negocioId = ViewBag.NegocioId; // Asegúrate de pasar el negocioId
}
<form id="formAgregarPlato" action="@Url.Action("AgregarPlato", "Restaurante")" method="post">
    <input type="hidden" name="negocioId" value="@negocioId" />
    <label>Nombre del Plato:</label>
    <input type="text" name="nombrePlato" required />
    <label>Tipo de Plato:</label>
    <select name="tipoPlato">
        <option value="Entrada">Entrada</option>
        <option value="Plato Fuerte">Plato Fuerte</option>
        <option value="Postre">Postre</option>
    </select>
    <label>Precio:</label>
    <input type="number" step="0.01" name="precio" required />
    <button type="submit">Agregar Plato</button>
</form>

@model Proyecto.Models.Usuario
@{
    ViewData["Title"] = "Registro";
    var mensaje = TempData["Mensaje"] as string;
    var mensajeClase = TempData["MensajeClase"] as string;
}
<h1 class="main-title">Registro</h1>

<div class="toggle-buttons">
    <button class="toggle-btn" onclick="toggleForm('turista')">Registro de Turista</button>
    <button class="toggle-btn" onclick="toggleForm('dueño')">Registro de Socio</button>
</div>
@if (Session["Mensaje"] != null)
{
    <div class="alert alert-danger">@Session["Mensaje"]</div>
}
@if (!string.IsNullOrEmpty(mensaje))
{
    <div class="alert @mensajeClase">
        @mensaje
    </div>
}

<!-- Formulario de Registro de Turista -->
<div id="turistaForm" class="form-container">
    <h2>Registro de Turista</h2>
    <form action="/Registro/RegistrarTurista" method="post" class="register-form">
        <input type="text" name="UsrNombresCompleto" placeholder="Nombre completo" class="form-input" required />
        <input type="email" name="UsrCorreo" placeholder="Correo Electrónico" class="form-input" required />
        <input type="password" name="contraseña" placeholder="Contraseña" class="form-input" required />
        <input type="number" name="UsrDniRut" placeholder="DNI o RUT" class="form-input" required />
        <button type="submit" class="submit-btn">Registrar</button>
    </form>
</div>

<!-- Formulario de Registro de Dueño de Local -->
<div id="dueñoForm" class="form-container" style="display:none;">
    <h2>Registro de Socio</h2>
    <form action="/Registro/RegistrarSocio" method="post" class="register-form">
        <input type="text" name="UsrNombresCompleto" placeholder="Nombre completo" class="form-input" required />
        <input type="email" name="UsrCorreo" placeholder="Correo Electrónico" class="form-input" required />
        <input type="password" name="contraseña" placeholder="Contraseña" class="form-input" required />
        <input type="number" name="UsrRuc" placeholder="RUC" class="form-input" required />
        <button type="submit" class="submit-btn">Siguiente</button>
    </form>
</div>

@if (ViewBag.Mensaje != null)
{
    <div class="message">@ViewBag.Mensaje</div>
}

@section Scripts {
    <script>
        function toggleForm(type) {
            if (type === 'turista') {
                document.getElementById('turistaForm').style.display = 'block';
                document.getElementById('dueñoForm').style.display = 'none';
            } else {
                document.getElementById('dueñoForm').style.display = 'block';
                document.getElementById('turistaForm').style.display = 'none';
            }
        }

        // Mostrar el formulario de turista por defecto
        document.getElementById('turistaForm').style.display = 'block';
    </script>
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        padding: 20px;
        text-align: center;
    }

    .main-title {
        text-align: center;
        color: #4A0D50;
        font-size: 2.5em;
        margin-bottom: 30px;
    }

    .toggle-buttons {
        text-align: center;
        margin-bottom: 20px;
    }

    .toggle-btn {
        background-color: #8C0042;
        color: white;
        border: none;
        padding: 10px 20px;
        margin: 0 10px;
        font-size: 1.1em;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .toggle-btn:hover {
            background-color: #4A0D50;
        }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .register-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .form-input {
        width: 80%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1em;
        text-align: center;
    }

    .submit-btn {
        width: 80%;
        padding: 10px 20px;
        background-color: #4A0D50;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        font-size: 1.2em;
        transition: background-color 0.3s ease;
    }

        .submit-btn:hover {
            background-color: #8C0042;
        }

    .message {
        text-align: center;
        margin-top: 20px;
        color: #4A0D50;
        font-weight: bold;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
        padding: 10px;
        border-radius: 5px;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        padding: 10px;
        border-radius: 5px;
    }
</style>
